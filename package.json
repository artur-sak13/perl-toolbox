{
  "name": "perlcritic",
  "displayName": "perlcritic",
  "description": "Linter for Perl",
  "version": "0.0.1",
  "publisher": "d9705996",
  "engines": {
    "vscode": "^1.22.0"
  },
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "Perlcritic",
      "properties": {
        "perlcritic.severity": {
          "type": "string",
          "enum": ["gentle", "stern", "harsh", "cruel", "brutal"],
          "default": "brutal",
          "description": "Critic Severity",
          "scope": "window"
        },
        "perlcritic.executable": {
          "type": ["string"],
          "default": "perlcritic",
          "description": "perlcritic binary",
          "scope": "window"
        },
        "perlcritic.path": {
          "type": ["string", "null"],
          "default": null,
          "description": "path to perlcritic binary",
          "scope": "window"
        },
        "perlcritic.excludedPolicies": {
          "type": "Array",
          "default": [],
          "description": "Policies to exclude",
          "scope": "window"
        }
      }
    }
  },
  "categories": ["Other"],
  "activationEvents": ["onLanguage:perl"],
  "main": "./out/extension",
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "postinstall": "node ./node_modules/vscode/bin/install",
    "test": "npm run compile && node ./node_modules/vscode/bin/test"
  },
  "devDependencies": {
    "@types/mocha": "^2.2.42",
    "@types/node": "^7.0.43",
    "tslint": "^5.8.0",
    "typescript": "^2.6.1",
    "vscode": "^1.1.17"
  }
}
