{
  "name": "perlcritic",
  "displayName": "perlcritic",
  "description": "Linter for Perl",
  "version": "0.0.1",
  "publisher": "d9705996",
  "engines": {
    "vscode": "^1.22.0"
  },
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "Perlcritic",
      "properties": {
        "perlcritic.lintseverity": {
          "type": "string",
          "enum": ["gentle", "stern", "harsh", "cruel", "brutal"],
          "default": "brutal",
          "description": "Report violations up to this severity",
          "scope": "window"
        },
        "perlcritic.executable": {
          "type": ["string"],
          "default": "perlcritic",
          "description": "perlcritic binary",
          "scope": "window"
        },
        "perlcritic.useProfile": {
          "type": "boolean",
          "default": false,
          "description": "Use settings from ~/.perlcriticrc",
          "scope": "window"
        },
        "perlcritic.severity.brutal": {
          "type": "string",
          "enum": ["critical", "warning", "info"],
          "default": "critical",
          "description": "Problem severity for brutal violations",
          "scope": "window"
        },
        "perlcritic.severity.cruel": {
          "type": "string",
          "enum": ["critical", "warning", "info"],
          "default": "critical",
          "description": "Problem severity for cruel violations",
          "scope": "window"
        },
        "perlcritic.severity.harsh": {
          "type": "string",
          "enum": ["critical", "warning", "info"],
          "default": "warning",
          "description": "Problem severity for harsh violations",
          "scope": "window"
        },
        "perlcritic.severity.stern": {
          "type": "string",
          "enum": ["critical", "warning", "info"],
          "default": "warning",
          "description": "Problem severity for stern violations",
          "scope": "window"
        },
        "perlcritic.severity.gentle": {
          "type": "string",
          "enum": ["critical", "warning", "info"],
          "default": "info",
          "description": "Problem severity for gentle violations",
          "scope": "window"
        },
        "perlcritic.path": {
          "type": ["string", "null"],
          "default": null,
          "description": "path to perlcritic binary",
          "scope": "window"
        },
        "perlcritic.excludedPolicies": {
          "type": "array",
          "default": [],
          "description": "Policies to exclude",
          "scope": "window"
        }
      }
    }
  },
  "categories": ["Other"],
  "activationEvents": ["onLanguage:perl"],
  "main": "./out/extension",
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "postinstall": "node ./node_modules/vscode/bin/install",
    "test": "npm run compile && node ./node_modules/vscode/bin/test"
  },
  "devDependencies": {
    "@types/mocha": "^2.2.42",
    "@types/node": "^7.0.43",
    "tslint": "^5.8.0",
    "typescript": "^2.6.1",
    "vscode": "^1.1.17"
  }
}
